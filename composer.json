{
    "name": "maaf/social",
    "description": "MAAF Social Package - OAuth provider modules with social login and social account linking",
    "type": "library",
    "keywords": ["maaf", "social", "oauth", "login", "authentication", "google", "facebook", "github"],
    "license": "MIT",
    "authors": [
        {
            "name": "Bloch TamÃ¡s",
            "email": "info@bloch.hu"
        }
    ],
    "require": {
        "php": ">=8.1",
        "maaf/core": "^2.0"
    },
    "suggest": {
        "league/oauth2-google": "Required for Google OAuth provider",
        "league/oauth2-facebook": "Required for Facebook OAuth provider",
        "league/oauth2-github": "Required for GitHub OAuth provider"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "MAAF\\Social\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MAAF\\Social\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
